@page "/support-list"
@using IBasSupportApp.Models
@inject IBasSupportApp.Services.CosmosDbService CosmosService

<h3>Supporthenvendelser</h3>

@if (messages == null)
{
    <p>Indlæser...</p>
}
else if (!messages.Any())
{
    <p>Ingen henvendelser fundet.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Kategori</th>
            <th>Status</th>
            <th>Oprettet</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var m in messages)
        {
            <tr>
                <td>@m.Customer?.Name</td>
                <td>@m.Customer?.Email</td>
                <td>@m.Customer?.Phone</td>
                <td>@m.Category</td>
                <td>@m.Status</td>
                <td>@m.CreatedAt.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private IEnumerable<SupportMessage>? messages;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            messages = await CosmosService.GetAllMessagesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Fejl ved hentning af data: {ex.Message}");
            messages = Enumerable.Empty<SupportMessage>();
        }
    }
}